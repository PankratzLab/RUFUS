#!/bin/sh

echo "ok lets do this"

GEN=$1
K=$2
T=$3

RDIR="/uufs/chpc.utah.edu/common/home/u0991464/d1/home/farrelac/bin/RUFUS_git/RUFUS"
JELLYFISH="$RDIR/src/externals/jellyfish-2.2.5/bin/jellyfish"
SORT="$RDIR/scripts/sort"
	
echo "$JELLYFISH"
$JELLYFISH


ulimit -v 120000000
ulimit -a
if [ -e "$GEN.Jhash.sorted.min2.tab" ]
then
        echo "Skipping jelly, $GEN.Jhash.Jhash.sorted.min2.tab alreads exists"
else
	echo "here"
	mkfifo $GEN.Jhash.temp
	$JELLYFISH count -G 20 -g $GEN -m $K -s 1G -t $T -o $GEN.Jhash -C
	$JELLYFISH dump -c -t -L 2 $GEN.Jhash > $GEN.Jhash.temp&
	$SORT --parallel=$T -S 50% -T ./ $GEN.Jhash.temp > $GEN.Jhash.sorted.min2.tab &
	$JELLYFISH histo -f -o $GEN.Jhash.histo $GEN.Jhash & 
	wait
	rm $GEN.Jhash
fi
